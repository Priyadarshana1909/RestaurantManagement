@model RestaurantDTO.Request.AddUpdateBill
@{
    ViewData["Title"] = "Create";
}

<h1>Create Bill</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderID" class="control-label"></label>
                <select asp-for="OrderID"
                        class="form-control"
                        asp-items="@(new SelectList(Model.Orders,"OrderID", "OrderID"))">
                </select>
                <span asp-validation-for="OrderID" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="RestaurantName" class="control-label"></label>
                 <input asp-for="RestaurantName" class="form-control" readonly="readonly" type="text" name="RestaurantName" id="RestaurantName" />
            </div>

            <div class="form-group">
                <label asp-for="BillAmount" class="control-label"></label>
                <input asp-for="BillAmount" class="form-control" readonly="readonly" type="text" name="BillAmount" id="BillAmount" />
            </div>
            <div class="form-group">
                <label asp-for="CustomerID" class="control-label"></label>
                <select asp-for="CustomerID"
                        class="form-control"
                        asp-items="@(new SelectList(Model.Customers,"CustomerID", "CustomerName"))">
                </select>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="RestaurantID" class="control-label"></label>
                <select asp-for="RestaurantID"
                        class="form-control"
                        asp-items="@(new SelectList(Model.Restaurants,"RestaurantID", "RestaurantName"))">
                </select>
                <span asp-validation-for="RestaurantID" class="text-danger"></span>
            </div>

            <div class="form-group" style="display:none;">
                <label asp-for="RestaurantID" class="control-label"></label>
                <select asp-for="RestaurantID"
                        class="form-control"
                        asp-items="@(new SelectList(Model.Restaurants,"RestaurantID", "RestaurantName"))">
                </select>
                <span asp-validation-for="RestaurantID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
<script type="text/javascript">
    $(function () {
         $("select#OrderID").change(function ()
         {
             var orderId = $(this).val();

              $('#BillAmount').empty();
              $.ajax({
                    type: "GET",
                    url: "/Bill/GetOrder/",
                    async : false,
                     data: {"OrderID": orderId  },
                    success: function (response) {
                        //debugger;
                      if (response.d != '') {
                            $("#BillAmount").val(response.orders[0].orderAmount);
                            $("#RestaurantID").val(response.orders[0].restaurantID);
                            $("#RestaurantName").val(response.orders[0].restaurantName);
                        }
                    },
                });
         });
     });

</script>
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
